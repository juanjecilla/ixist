<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- The theme applied to the application or activity -->
    <style name="Ixist"
        parent="@style/Theme.AppCompat">
        <item name="android:windowBackground">@color/alabaster</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/alabaster</item>
        <item name="android:colorPrimaryDark">@color/cinnabar</item>
        <item name="android:colorPrimary">@color/orange</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/ActionBar</item>
        <item name="actionBarTabTextStyle">@style/ActionBarTabText</item>
        <item name="actionMenuTextColor">@color/alabaster</item>
        <item name="colorPrimaryDark">@color/cinnabar</item>
        <item name="colorPrimary">@color/orange</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar"
        parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/orange</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
        <item name="android:elevation">0dp</item>

        <!-- Support library compatibility -->
        <item name="background">@color/orange</item>
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- ActionBar title text -->
    <style name="ActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/alabaster</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

    <!-- ActionBar tabs text -->
    <style name="ActionBarTabText"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/alabaster</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>
</resources>